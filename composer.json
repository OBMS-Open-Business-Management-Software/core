{
    "name": "obms/core",
    "type": "project",
    "description": "The OBMS core application.",
    "keywords": ["obms", "open business management software"],
    "license": "BSL 1.1",
    "homepage": "https://getobms.com",
    "support": {
        "docs": "https://docs.getobms.com",
        "email": "support@getobms.com",
        "issues": "https://github.com/OBMS-Open-Business-Management-Software/core/issues",
        "source": "https://github.com/OBMS-Open-Business-Management-Software/core"
    },
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-imagick": "*",
        "ext-imap": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "horstoeko/zugferd-laravel": "^1.0",
        "awobaz/compoships": "^2.1",
        "bacon/bacon-qr-code": "^3.0",
        "barryvdh/laravel-dompdf": "^2.0",
        "doctrine/dbal": "^3.2",
        "endroid/qr-code": "^5.1",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/fortify": "^1.24",
        "laravel/framework": "^11.0",
        "laravel/horizon": "^5.7",
        "laravel/passport": "^12.0",
        "laravel/pulse": "^1.4",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.5",
        "lcobucci/clock": "^2.2",
        "phpseclib/phpseclib": "^3.0",
        "sabre/dav": "^4.2",
        "scssphp/scssphp": "^2.0",
        "smhg/sepa-qr-data": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^10.5",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "format": "./vendor/bin/pint",
        "format-check": "./vendor/bin/pint --test",
        "analyse": "./vendor/bin/phpstan analyse --memory-limit=2G",
        "analyse-baseline": "./vendor/bin/phpstan analyse --memory-limit=2G --generate-baseline",
        "test-all": [
            "@format-check",
            "@analyse"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
